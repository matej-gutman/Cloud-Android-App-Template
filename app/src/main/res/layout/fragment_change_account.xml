<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".presentation.main.account.users.detail.ViewAccountFragment"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="#fff"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            >
        <TextView
                android:id="@+id/usernameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:text="@string/field_username"
                android:textColor="@color/grey5"
                android:textSize="15sp" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="@+id/usernameField"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/username"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/user_name"
                android:textColor="#000"
                android:textSize="19sp"
                android:textStyle="bold"
                />



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/container1"
                >

            <TextView
                    android:id="@+id/roleLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:text="@string/role_field"
                    android:textColor="@color/grey5"
                    android:textSize="15sp" />

            <Spinner
                    android:id="@+id/role_spinner"
                    app:layout_constraintTop_toTopOf="@+id/roleLabel"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/roles"/>


            <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:text="@string/email_field"
                    android:textColor="@color/grey5"
                    android:textSize="15sp" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:text="@string/arg_email"
                    android:textColor="@color/grey5"
                    android:textSize="15sp"
                    />

            <TextView
                    android:id="@+id/ageLAbel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:text="@string/age_field"
                    android:textColor="@color/grey5"
                    android:textSize="15sp" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/age"
                    android:text="30"
                    android:textColor="@color/grey5"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    />


            <TextView
                    android:id="@+id/created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:text="@string/createdAt_field"
                    android:textColor="@color/grey5"
                    android:textSize="15sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createdAt"
                    android:text="1111"
                    android:textColor="@color/grey5"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    />


            <TextView
                    android:id="@+id/updated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:text="@string/updatedAt_field"
                    android:textColor="@color/grey5"
                    android:textSize="15sp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/updatedAt"
                    android:text="1111"
                    android:textColor="@color/grey5"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    />

            <Switch
                    android:id="@+id/enabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enabled"
                    android:checked="false"
                    android:clickable="true"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey4"
                    android:layout_marginTop="10dp"
                    >

            </View>


            <Button
                    android:id="@+id/delete_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_button_drawable"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp"
                    android:visibility="visible"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>